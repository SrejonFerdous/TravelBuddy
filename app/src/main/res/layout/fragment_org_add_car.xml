<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".org_add_car">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/font6"
            android:text="Welcome  "
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />
        <TextView
            android:id="@+id/org_addCar_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/font6"
            android:text="User001"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@drawable/uploadimage"
                android:id="@+id/org_addCar_upload_image"
                />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Name"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_name"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Price"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_price"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="numberDecimal"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Available at place"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_place"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Rating"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_rating"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Number of people"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_people"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Number of Seats"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/org_addCar_bed"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:inputType="number"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/org_addCar_save"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/font1"
                android:text="Save"
                android:textSize="@dimen/_13sdp"
                app:backgroundTint="#1E4595"
                />
        </LinearLayout>


    </ScrollView>



</LinearLayout>