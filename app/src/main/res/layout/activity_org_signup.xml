<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".org_signup">

    <Button
        android:id="@+id/org_signup_b1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/full_transparent"
        app:icon="@drawable/back_arrow"
        app:iconTint="@color/black" />

    <TextView
        android:id="@+id/org_signup_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/font6"
        android:text="Sign up to Travel Buddy"
        android:textStyle="bold"
        android:textColor="@drawable/login_text_color"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/org_signup_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font6"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/org_signup_et1"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/edittext_bg2"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_13sdp"
                app:errorEnabled="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/org_signup_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/font6"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/org_signup_et2"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/edittext_bg2"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/org_signup_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/font6"
        android:text="E-mail / Phone Number"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_gravity="center_horizontal"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/org_signup_et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg2"
            android:fontFamily="@font/font1"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/org_signup_tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/font6"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_gravity="center_horizontal"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/app_color"
        app:helperTextEnabled="true"
        app:helperText="Enter Strong Password"
        app:helperTextTextColor="@color/app_color"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/org_signup_et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg2"
            android:fontFamily="@font/font1"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_13sdp" />
    </com.google.android.material.textfield.TextInputLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        >

        <Button
            android:id="@+id/org_signup_b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bg3"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/font1"
            android:text="Sign Up"
            android:textSize="@dimen/_15sdp"
            app:backgroundTint="#1E4595" />

        <ProgressBar
            android:id="@+id/org_signup_pb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/app_color"
            android:max="100"
            android:progress="50"
            android:visibility="gone"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/org_signup_tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font6"
            android:text="Already have an account ?"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/org_signup_tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/font6"
            android:text="Sign In"
            android:textColor="@color/button_color"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</LinearLayout>