<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".post">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/font6"
            android:text="Welcome  "
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />
        <TextView
            android:id="@+id/post_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/font6"
            android:text="User001"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@drawable/uploadimage"
                android:id="@+id/post_upload_image"
                />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Name"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_name"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Price"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_price"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="numberDecimal"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="place"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_place"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Rating"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_rating"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Check In-Out"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_checkInOut"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="none"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Number of people"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_people"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:textSize="@dimen/_16sdp"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:hint="Number of bed"
                app:endIconMode="clear_text"
                app:endIconTint="@color/another_app_color"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_bed"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/font3"
                    android:inputType="number"
                    android:textSize="@dimen/_16sdp"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_50sdp"
                    >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wifi"
                        android:layout_margin="@dimen/_5sdp"
                        android:textSize="15dp"
                        android:id="@+id/post_wifi"
                        android:fontFamily="@font/font2"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="spa"
                        android:id="@+id/post_spa"
                        android:layout_margin="@dimen/_5sdp"
                        android:textSize="15dp"
                        android:fontFamily="@font/font2"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pets"
                        android:layout_margin="@dimen/_5sdp"
                        android:textSize="15dp"
                        android:id="@+id/post_pet"
                        android:fontFamily="@font/font2"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_70sdp"
                    >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pool"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/post_pool"
                        android:textSize="15dp"
                        android:fontFamily="@font/font2"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="parking"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/post_parking"
                        android:textSize="15dp"
                        android:fontFamily="@font/font2"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/post_ac"
                        android:textSize="15dp"
                        android:fontFamily="@font/font2"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/post_save"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/font1"
                android:text="Save"
                android:textSize="@dimen/_13sdp"
                app:backgroundTint="#1E4595"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>